<UserControl x:Class="TestWPF.Views.JustDataSmallView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestWPF.Views"
             xmlns:data="clr-namespace:TestWPF.BuissnesLogic"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="80">
    <UserControl.DataContext>
        <data:JustData/>
    </UserControl.DataContext>

    <Grid>
        <Border BorderBrush="Gray" BorderThickness="2" CornerRadius="4" Padding="2">
        </Border>
        <Viewbox>
            
        <TextBlock 
            FontSize="10"
            MaxWidth="80"
            Margin="2"
            Text= "{Binding Name}"
            HorizontalAlignment="Center" 
            TextWrapping="Wrap"/>
        </Viewbox>
    </Grid>
</UserControl>
